<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvSearchDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dimen_5_dip"
        android:layout_marginTop="@dimen/dimen_10_dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <MultiAutoCompleteTextView
            android:id="@+id/actSrtSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入单词进行搜索       " />
		
         <Button
            android:id="@+id/btn_srtsearch"
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_gravity="right|center"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="@drawable/search" />
         
         <Button
            android:id="@+id/btn_srtsearch_clear"
            android:layout_width="@dimen/dimen_25_dip"
            android:layout_height="@dimen/dimen_25_dip"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:background="@drawable/search_clear"
            android:visibility="invisible" />
    </LinearLayout>
    
    <ListView 
         android:id="@+id/lvSrtSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="3dip"
        ></ListView>

</LinearLayout>